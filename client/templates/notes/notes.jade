head
  title NoteDown | Notes

// Will be rendered in the header
template(name='notesHeader')
  if clients
    .client-select-box
      .client-select
        select#select2.dib
          option
          each clients
            option(value='#{_id}')= name
      

// Rendered in the main app area
template(name='notes')
  .container
    if hasClients
      #new-note
        input(type='text', placeholder='New Note...')
        i.fa.fa-edit
    else
      #new-note.disabled
        input(type='text', placeholder='New Note...', disabled)
        i.fa.fa-edit


    h1 All Notes
    ul#notes
      if notes
        each notes
          +note
      else
        li.no-records
          h4 You don't have any notes yet.
          p Add one using the input above.

